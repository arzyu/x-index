<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Awesome App</name>
  <content src="index.html" />
  <access origin="*" />
  <allow-navigation href="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <hook type="after_prepare" src="scripts/fix-line-feed.sh" />
  <hook type="after_platform_add" src="scripts/fix-line-feed.sh" />
  <hook type="after_plugin_add" src="scripts/fix-line-feed.sh" />
  <hook type="after_plugin_rm" src="scripts/fix-line-feed.sh" />
</widget>
